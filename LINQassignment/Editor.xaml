<Window x:Class="LINQassignment.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LINQassignment"
        mc:Ignorable="d"
        Title="Editor" Height="450" Width="800">
    <Grid>
        <Label x:Name="Id" Content="Id" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Name" Content="Name" HorizontalAlignment="Left" Margin="149,28,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Age" Content="Age" HorizontalAlignment="Left" Margin="330,28,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="sid" HorizontalAlignment="Left" Margin="10,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="72"/>
        <TextBox x:Name="sname" HorizontalAlignment="Left" Margin="149,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="sage" HorizontalAlignment="Left" Margin="330,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="addStudent" Content="Add" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Click="addStudent_Click" RenderTransformOrigin="0.519,0.541"/>
        <Button x:Name="delStudent" Content="Delete" HorizontalAlignment="Left" Margin="97,132,0,0" VerticalAlignment="Top" Click="delStudent_Click"/>
        <Button x:Name="updateStudent" Content="Update" HorizontalAlignment="Left" Margin="209,132,0,0" VerticalAlignment="Top" Click="updateStudent_Click" />

    </Grid>
</Window>
